<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5" 
    android:orientation="vertical">

    <include layout="@layout/layout_header" />

    <!-- Profile Section -->
    <RelativeLayout
        android:id="@+id/profileSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="16dp">

        <TextView
            android:id="@+id/profile_emoji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="ðŸ‘¤"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@+id/profile_emoji"
            android:text="Hello, Yash"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text=">"
            android:textColor="@color/black"
            android:textSize="24sp" />

    </RelativeLayout>

    <!-- Quick Actions -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:paddingHorizontal="8dp"
        android:weightSum="2">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_my_orders"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginHorizontal="8dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="My Orders"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_help_center"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginHorizontal="8dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Help Center"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <!-- Settings List -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/btn_settings"
            style="@style/AccountOption"
            android:text="Settings" />

        <View style="@style/Divider" />

        <TextView
            android:id="@+id/btn_become_supplier"
            style="@style/AccountOption"
            android:text="Become a Supplier" />

        <View style="@style/Divider" />

        <TextView
            android:id="@+id/btn_rate_app"
            style="@style/AccountOption"
            android:text="Rate the App" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <include layout="@layout/layout_footer" />

</LinearLayout>
